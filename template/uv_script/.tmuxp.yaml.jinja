session_name: {{ project_name }}
windows:
  - window_name: {{ project_name }}
    layout: main-vertical
    options:
      main-pane-width: 20%
    panes:
      - shell_command:
          - cd ~/Documents/Notes/Projects/{{ project_name }}
          # - nvim Notes.md ToDo.md
          - open-project
      - shell_command:
          - tmux resizep -y 85%
          - filelist-open "startup_files.txt" {{ project_name }}
        focus: true
      - clear

